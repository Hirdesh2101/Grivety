<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="@drawable/bottomsheetbackground"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="45dp"
            android:layout_height="8dp"
            android:background="@drawable/bottomsheet"
            android:layout_centerHorizontal="true"
            android:id="@+id/bottomlogo"
            />

        <ImageView
            android:id="@+id/bottomdailogimage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="10dp"
            android:layout_below="@id/bottomlogo"
            android:src="@drawable/logo1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottomdailogheading"
            android:layout_below="@id/bottomdailogimage"
            android:padding="10dp"
            android:text="dsvnvdsnklsnlsdnlsdknl"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottomdailogdata"
            android:layout_below="@id/bottomdailogheading"
            android:padding="10dp"
            android:layout_marginTop="-10dp"
            android:text="dsvnvdsnklsnlsdnlsdknl"
            android:textColor="#000000"
            android:textSize="14sp"
            />
    </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>